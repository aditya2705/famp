<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/md_green_600</item>
        <item name="colorPrimaryDark">@color/md_green_700</item>
        <item name="colorAccent">@color/md_green_600</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowActionBarOverlay">false</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="CustomTheme" parent="MaterialDrawerTheme.Light.DarkToolbar">
        <!-- ...and here we setting appcompatâ€™s color theming attrs -->
        <item name="colorPrimary">@color/md_green_600</item>
        <item name="colorPrimaryDark">@color/md_green_700</item>
        <item name="colorAccent">@color/md_green_600</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:textColorPrimary">@color/md_white_1000</item>
        <item name="android:textColorSecondary">@color/md_white_1000</item>
        <item name="android:itemTextAppearance">@style/menuItemColor</item>
        <item name="actionOverflowMenuStyle">@style/OptionsMenu</item>
        <item name="actionMenuTextColor">@color/md_white_1000</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>

        <!-- MaterialDrawer specific values -->
        <item name="material_drawer_background">@color/material_drawer_background</item>
        <item name="material_drawer_primary_text">@color/material_drawer_primary_text</item>
        <item name="material_drawer_primary_icon">@color/material_drawer_primary_icon</item>
        <item name="material_drawer_secondary_text">@color/material_drawer_secondary_text</item>
        <item name="material_drawer_hint_text">@color/material_drawer_hint_text</item>
        <item name="material_drawer_divider">@color/material_drawer_divider</item>
        <item name="material_drawer_selected">@color/md_grey_300</item>
        <item name="material_drawer_selected_text">@color/md_green_800</item>
        <item name="material_drawer_header_selection_text">
            @color/material_drawer_header_selection_text
        </item>
        <item name="android:windowActionBarOverlay">true</item>

    </style>

    <style name="menu_labels_style">
        <item name="android:background">@drawable/card</item>
        <item name="android:textColor">@color/md_green_700</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:padding">@dimen/_10sdp</item>

    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">#fff</item>
    </style>

    <style name="menuItemColor">
        <item name="android:textColor">@color/md_blue_700</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="OptionsMenu" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:popupBackground">@color/md_white_1000</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="ActionBar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:displayOptions">homeAsUp</item>
    </style>

    <style name="CustomTextAppearance" parent="TextAppearance.MaterialCalendarWidget.Header">
        <item name="android:textColor">@color/md_black_1000</item>
    </style>

    <style name="CustomDayAppearance" parent="TextAppearance.MaterialCalendarWidget.Header">
        <item name="android:textColor">@color/md_grey_500</item>
    </style>

    <style name="AlertDialogCustom" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/primary</item>
    </style>


    <style name="DestructiveButton" parent="android:Widget.DeviceDefault.Button.Borderless">
        <item name="android:textColor">@color/md_red_400</item>
    </style>

</resources>
