<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <LinearLayout
        android:id="@+id/parent_branch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <View
            android:layout_width="@dimen/_15sdp"
            android:layout_height="@dimen/_15sdp"
            android:background="@drawable/circle_drawable"/>

        <View
            android:layout_marginTop="@dimen/_minus5sdp"
            android:layout_gravity="center_horizontal"
            android:layout_width="@dimen/_5sdp"
            android:layout_height="@dimen/_30sdp"
            android:background="@color/md_green_300"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        >

        <View
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_5sdp"
            android:background="@color/md_green_300"
            android:layout_alignBottom="@+id/person_image_view"
            android:layout_marginRight="@dimen/_25sdp"
            android:layout_alignRight="@+id/spouse_layout"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/person_image_view"
        android:layout_width="@dimen/_70sdp"
        android:layout_height="@dimen/_70sdp"
        app:civ_border_width="@dimen/_2sdp"
        app:civ_border_color="#FF000000"
        android:src="@drawable/profile"
        android:background="@drawable/circle_drawable"
        android:layout_centerHorizontal="true"
        />

        <LinearLayout
            android:id="@+id/spouse_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/_50sdp"
            android:layout_toRightOf="@+id/person_image_view">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/spouse_image_view"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            app:civ_border_width="@dimen/_2sdp"
            app:civ_border_color="#FF000000"
            android:src="@drawable/profile"
            android:background="@drawable/circle_drawable"/>

            <View
                android:layout_width="@dimen/_5sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_gravity="center_horizontal"
                android:background="@color/md_green_300"/>


        </LinearLayout>





    </RelativeLayout>

    <LinearLayout
        android:id="@+id/child_branch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <View
            android:layout_marginBottom="@dimen/_minus5sdp"
            android:layout_gravity="center_horizontal"
            android:layout_width="@dimen/_5sdp"
            android:layout_height="@dimen/_30sdp"
            android:background="@color/md_green_300"/>

        <View
            android:layout_width="@dimen/_15sdp"
            android:layout_height="@dimen/_15sdp"
            android:background="@drawable/circle_drawable"/>

    </LinearLayout>


</LinearLayout>