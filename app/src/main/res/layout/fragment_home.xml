<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/md_green_50">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_150sdp"
            android:orientation="horizontal">

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btn_tree_view"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="@dimen/_15sdp"
                android:textSize="@dimen/_15sdp"
                android:layout_margin="@dimen/_10sdp"
                android:text="View Family Tree"
                android:textColor="@color/md_white_1000"
                android:theme="@style/CustomButtonStyle"/>

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btn_members_list"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="@dimen/_15sdp"
                android:layout_margin="@dimen/_10sdp"
                android:textSize="@dimen/_15sdp"
                android:text="View Members List"
                android:textColor="@color/md_white_1000"
                android:theme="@style/CustomButtonStyle"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_150sdp"
            android:orientation="horizontal">

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btn_calendar"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="@dimen/_15sdp"
                android:textSize="@dimen/_15sdp"
                android:layout_margin="@dimen/_10sdp"
                android:text="Show Calendar"
                android:textColor="@color/md_white_1000"
                android:theme="@style/CustomButtonStyle"/>

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btn_all_events"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="@dimen/_15sdp"
                android:layout_margin="@dimen/_10sdp"
                android:textSize="@dimen/_15sdp"
                android:text="Show All Events"
                android:textColor="@color/md_white_1000"
                android:theme="@style/CustomButtonStyle"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
