<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Fragments.EventTableFragment">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_16sdp"
        android:layout_marginLeft="@dimen/_16sdp"
        android:layout_marginRight="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_20sdp"

        >

        <LinearLayout
            android:id="@+id/card_tab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/month_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_10sdp"
                android:text="January"
                android:textColor="@color/half_black"
                android:textSize="@dimen/_20sdp" />

            <View
                android:id="@+id/line0"
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:layout_weight="1"
                android:background="#FF909090"
                android:padding="2dip" />

            <com.ogaclejapan.smarttablayout.SmartTabLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/viewpagertab"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginBottom="@dimen/_12sdp"
                android:background="#fff"
                app:stl_customTabTextLayoutId="@layout/custom_smart_tab"
                app:stl_defaultTabTextAllCaps="false"
                app:stl_defaultTabTextSize="@dimen/_9sdp"
                app:stl_distributeEvenly="true"
                app:stl_dividerColor="#777888"
                app:stl_dividerThickness="@dimen/_1sdp"
                app:stl_indicatorColor="#000"
                app:stl_indicatorInterpolation="linear"
                app:stl_indicatorThickness="1dp"
                app:stl_indicatorWithoutPadding="true"
                app:stl_underlineColor="#777888"
                app:stl_underlineThickness="0dp" />

            <android.support.v4.view.ViewPager
                android:id="@+id/viewpager"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_300sdp"
                android:layout_below="@id/viewpagertab" />


        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>