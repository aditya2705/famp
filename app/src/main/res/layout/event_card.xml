<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Fragments.EventTableFragment">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_16sdp"
        android:layout_marginLeft="@dimen/_16sdp"
        android:layout_marginRight="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_20sdp"

        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/month_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_10sdp"
                android:text="January"
                android:textColor="@color/half_black"
                android:textSize="@dimen/_20sdp" />

            <View
                android:id="@+id/line0"
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:layout_weight="1"
                android:background="#FF909090"
                android:padding="2dip" />

            <TableLayout
                android:id="@+id/month_table"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/_9sdp"
                    android:paddingTop="@dimen/_9sdp">

                    <TextView
                        android:width="@dimen/_60sdp"
                        android:paddingLeft="@dimen/_10sdp"
                        android:text="Dates"
                        android:textColor="@color/md_black_1000"></TextView>

                    <TextView
                        android:width="@dimen/_100sdp"
                        android:text="Birthday"
                        android:textColor="@color/md_black_1000"></TextView>

                    <TextView
                        android:width="@dimen/_100sdp"
                        android:text="Anniversary"
                        android:textColor="@color/md_black_1000"></TextView>

                    <TextView
                        android:width="@dimen/_100sdp"
                        android:text="City"
                        android:textColor="@color/md_black_1000"></TextView>

                    <TextView
                        android:width="@dimen/_100sdp"
                        android:text="Contact Number"
                        android:textColor="@color/md_black_1000"></TextView>

                    <TextView
                        android:width="@dimen/_200sdp"
                        android:text="Email"
                        android:textColor="@color/md_black_1000"></TextView>

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <View
                        android:id="@+id/line1"
                        android:layout_width="match_parent"
                        android:layout_height="1dip"
                        android:layout_weight="1"
                        android:background="#FF909090"
                        android:padding="2dip" />
                </TableRow>


            </TableLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</HorizontalScrollView>