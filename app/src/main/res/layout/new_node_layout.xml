<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <include
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        layout="@layout/node_layout"
        android:id="@+id/node_layout"
        android:layout_centerHorizontal="true" />


    <LinearLayout
        android:layout_marginTop="@dimen/_minus15sdp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/node_layout"
        android:id="@+id/childLinearLayout"></LinearLayout>

    <requestFocus
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="221dp"
        android:layout_marginStart="221dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_5sdp"
        android:id="@+id/child_branch"
        android:background="@color/md_green_300"
        android:layout_below="@+id/node_layout"
        android:layout_marginLeft="@dimen/_85sdp"
        android:layout_marginRight="@dimen/_85sdp"
        android:layout_marginTop="@dimen/_minus10sdp"
        android:layout_centerHorizontal="true"
        android:layout_alignLeft="@+id/childLinearLayout"
        android:layout_alignRight="@+id/childLinearLayout" />
</RelativeLayout>